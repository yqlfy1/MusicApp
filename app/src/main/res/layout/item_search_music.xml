<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:padding="10dp"
    android:background="#C0C0C0"
    >
<!--    app:contentPadding="10dp"-->
<!--    app:cardCornerRadius="10dp"-->
<!--    app:cardElevation="1dp"-->
<!--    app:cardBackgroundColor="@color/cardview_dark_background">-->
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="#C0C0C0">
       <TextView
           android:id="@+id/item_search_music_num"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="1"
           android:textColor="#F8F8F4"
           android:layout_centerVertical="true"
           android:textSize="24sp"
           android:textStyle="bold"/>
       <ImageView
           android:id="@+id/item_search_music_bg"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@mipmap/music"
           android:layout_toRightOf="@id/item_search_music_num"
           android:layout_centerVertical="true"
           android:textSize="24sp"
           android:textStyle="bold"/>
       <TextView
           android:id="@+id/item_search_music_song"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="44444444"
           android:textColor="#F8F8F4"
           android:textSize="18sp"
           android:textStyle="bold"
           android:layout_toRightOf="@id/item_search_music_num"
           android:singleLine="true"
           android:layout_marginLeft="20dp"/>

       <TextView
           android:id="@+id/item_search_music_singer"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="2222222"
           android:textColor="#F8F8F4"
           android:layout_below="@id/item_search_music_song"
           android:layout_alignLeft="@id/item_search_music_song"
           android:layout_marginTop="10dp"
           android:textSize="14sp"/>

       <TextView
           android:id="@+id/item_search_music_line"
           android:layout_width="2dp"
           android:layout_height="18dp"
           android:textColor="#F8F8F4"
           android:background="#888"
           android:layout_toRightOf="@id/item_search_music_singer"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:layout_alignTop="@id/item_search_music_singer"/>

       <TextView
           android:id="@+id/item_search_music_album"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="11111"
           android:layout_toRightOf="@id/item_search_music_line"
           android:layout_alignTop="@id/item_search_music_singer"
           android:textSize="14sp"
           android:textColor="#F8F8F4"
           android:ellipsize="end"
           android:singleLine="true"/>


       <TextView
           android:id="@+id/item_search_music_durtion"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/item_search_music_singer"
           android:layout_alignParentRight="true"
           android:text=""
           android:textSize="14sp"
           android:textColor="#888"/>
       <ImageView
           android:id="@+id/item_search_play"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@mipmap/icon_play"
           android:layout_above="@id/item_search_music_durtion"
           android:layout_alignParentRight="true"
           android:layout_marginRight="80dp"
           android:textSize="24sp"
           android:textStyle="bold"/>

   </RelativeLayout>
</androidx.cardview.widget.CardView>